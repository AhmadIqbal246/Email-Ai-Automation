# =============================================================================
# EMAIL AUTOMATION BACKEND - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual credentials
# Never commit .env file to version control

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
DJANGO_SECRET_KEY=your-super-secret-django-key-here-make-it-long-and-random
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-production-domain.com

# Development/Production Environment
ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/email_automation
# DATABASE_NAME=email_automation
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# =============================================================================
# GOOGLE/GMAIL API CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console -> API & Services -> Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Google Cloud Project Settings
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id

# Gmail Push Notifications
GMAIL_PUSH_TOPIC=projects/your-project-id/topics/gmail-notifications
GMAIL_WEBHOOK_URL=https://your-domain.com/api/gmail/webhook/
GMAIL_WEBHOOK_SECRET=your-webhook-secret-token
PUBSUB_TOPIC_NAME=gmail-notifications
PUBSUB_SUBSCRIPTION_NAME=gmail-notifications-sub
WEBHOOK_SECRET_TOKEN=your-webhook-secret-token

# =============================================================================
# EMAIL SMTP CONFIGURATION
# =============================================================================
# For sending system emails (invitations, notifications, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-or-smtp-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# =============================================================================
# AI/OPENAI CONFIGURATION
# =============================================================================
# OpenAI API (or OpenRouter for cost-effective GPT access)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Alternative: OpenRouter (for cheaper GPT access)
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# OPENAI_MODEL=openai/gpt-4o

# =============================================================================
# HUBSPOT INTEGRATION
# =============================================================================
# Get these from HubSpot -> Settings -> Integrations -> Private Apps
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_DEFAULT_API_KEY=your-default-hubspot-api-key
HUBSPOT_REDIRECT_URI=http://localhost:8000/api/hubspot/oauth/callback/

# =============================================================================
# CELERY/REDIS CONFIGURATION
# =============================================================================
# Redis for Celery task queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Alternative: Memory (for development without Redis)
# CELERY_BROKER_URL=memory://
# CELERY_RESULT_BACKEND=cache+memory://

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:5173

# CORS Settings (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# SECURITY & JWT CONFIGURATION
# =============================================================================
# JWT Token Settings
JWT_SECRET_KEY=your-jwt-secret-key-different-from-django-secret
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=86400

# CSRF Settings
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_DIR=logs

# =============================================================================
# NGROK/WEBHOOK DEVELOPMENT
# =============================================================================
# For local development with ngrok
NGROK_SUBDOMAIN=your-ngrok-subdomain
NGROK_URL=https://your-ngrok-subdomain.ngrok-free.app

# =============================================================================
# THIRD PARTY SERVICES
# =============================================================================
# Add other service API keys as needed
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG...
# TWILIO_ACCOUNT_SID=AC...
